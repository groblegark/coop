#!/bin/bash
set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"
INSTALL_DIR="$HOME/.local/bin"

# Ensure install directory exists
mkdir -p "$INSTALL_DIR"

# Build coop CLI and coopmux
echo "Building coop and coopmux..."
cd "$ROOT_DIR"
cargo build --release -p coop -p coop-mux

# Install to ~/.local/bin/
echo "Installing to $INSTALL_DIR..."
/bin/cp "$ROOT_DIR/target/release/coop" "$INSTALL_DIR/coop"
/bin/cp "$ROOT_DIR/target/release/coopmux" "$INSTALL_DIR/coopmux"

# Re-sign the binaries after copying (required on macOS for adhoc-signed binaries)
if [[ "$(uname)" == "Darwin" ]]; then
    codesign --force --sign - "$INSTALL_DIR/coop"
    codesign --force --sign - "$INSTALL_DIR/coopmux"
fi

echo "Done."
